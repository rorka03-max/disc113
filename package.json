{
  "name": "discord-clone",
  "version": "1.0.0",
  "description": "A fully functional Discord clone with authentication, messaging, voice/video calls, screen sharing, and camera support",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "discord",
    "chat",
    "webrtc",
    "socketio",
    "video-call",
    "screen-sharing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vkontakte/vk-tunnel": "^0.2.10",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.discordclone.app",
    "productName": "Discord Clone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/socket.io/**/*",
      "node_modules/socket.io-client/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
